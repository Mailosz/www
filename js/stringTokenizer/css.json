{
    "default": {
        "begin": [{
            "on": "declarationEnd"
        },{
            "on": "commentEnd",
            "when": {
                "previous-state": ""
            }
        }],
        "default": true,
        "then": {
            "previous-state": ""
        }
    },
    "mediaQuery": {
        "begin": {
            "on": ["default", "selector"],
            "by": "@"
        },
        "data": {
            "color": "orange"
        }
    },
    "mediaQueryInner": {
        "begin": {
            "on": ["mediaQuery"],
            "by": "{"
        },
        "data": {
            "color": "maroon"
        }
    },
    "selector": {
        "begin": [{
            "on": ["default", "mediaQueryInner"],
            "by": ""
        },{
            "on": "commentEnd",
            "when": {
                "previous-state": "selector"
            }
        }]
    },
    "declarationStart": {
        "begin": {
            "on": "selector",
            "by": "{"
        },
		"data": {
			"color": "maroon"
		}
    },
    "declaration": {

    },
    "declarationEnd": {
        "begin": {
            "on": ["declaration", "mediaQueryInner", "selector", "default"],
            "by": "}"
        },
		"data": {
			"color": "maroon"
		}
    },
    "property": {
        "group": "declaration",
        "begin": [{
            "on": "declarationStart"
        },{
            "on": "value",
            "by": ";"
        },{
            "on": "commentEnd",
            "when": {
                "previous-state": "property"
            }
        }],
		"data": {
			"color": "green"
		}
    },
    "propertyValueSeparator": {
        "group": "declaration",
        "begin": [{
            "on": "property",
            "by": ":"
        }],
		"data": {
			"color": "black"
		}
    },
    "value": {
        "group": "declaration",
        "begin": [{
            "on": "propertyValueSeparator"
        }],
		"data": {
			"color": "blue"
		}
    },
    "comment": {
        "begin": [{
            "by": "/*",
            "everywhere": true,
            "then": {
                "previous-state": ""
            }
        },{
            "by": "/*",
            "on": "selector",
            "then": {
                "previous-state": "selector"
            }
        },{
            "by": "/*",
            "on": "property",
            "then": {
                "previous-state": "property"
            }
        }],
        "data": {
            "color": "lime"
        }
    }, 
    "commentEnd": {
        "begin": [{
            "by": "*/",
            "on": "comment"
        }],
        "data": {
            "color": "lime"
        }
    }
}