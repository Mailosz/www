{
    "default": {
        "begin": [{
            "on": "declarationEnd"
        },{
            "on": "commentEnd",
            "when": {
                "previous-state": ""
            }
        }],
        "default": true,
        "set": {
            "previous-state": "",
            "quote-type": null
        }
    },
    "mediaQuery": {
        "begin": {
            "on": ["default", "selector"],
            "by": "@"
        }
    },
    "mediaQueryInner": {
        "begin": {
            "on": ["mediaQuery"],
            "by": "{"
        }
    },
    "selector": {
        "begin": [{
            "on": ["default", "mediaQueryInner"],
            "by": ""
        },{
            "on": "commentEnd",
            "when": {
                "previous-state": "selector"
            }
        }]
    },
    "declarationStart": {
        "begin": {
            "on": "selector",
            "by": "{"
        }
    },
    "declaration": {

    },
    "declarationEnd": {
        "begin": {
            "on": ["declaration", "mediaQueryInner", "selector", "default"],
            "by": "}"
        }
    },
    "property": {
        "group": "declaration",
        "begin": [{
            "on": "declarationStart"
        },{
            "on": "propertiesSeparator"
        },{
            "on": "commentEnd",
            "when": {
                "previous-state": "property"
            }
        }]
    },"propertiesSeparator":{
        "begin": {
            "on": ["value", "valueQuoteEnd"],
            "by": ";"
        }
    },
    "propertyValueSeparator": {
        "group": "declaration",
        "begin": [{
            "on": "property",
            "by": ":"
        }]
    },
    "value": {
        "group": "declaration",
        "begin": [{
            "on": "propertyValueSeparator"
        }]
    },
    "valueQuote": {
        "begin": [{
            "on": ["value"],
            "by": ["\""],
            "set": {
                "quote-type": "\""
            }
        },{
            "on": ["value"],
            "by": ["'"],
            "set": {
                "quote-type": "'"
            }
        },{
            "on": ["valueQuoteEscape"]
        }]
    },
    "valueQuoteEnd": {
        "begin": [{
            "on": ["valueQuote"],
            "by": ["\""],
            "when": {
                "quote-type": "\""
            }
        },{
            "on": ["valueQuote"],
            "by": ["'"],
            "when": {
                "quote-type": "'"
            }
        }],
        "set": {
            "quote-type": null
        }
    },
    "valueQuoteEscape": {
        "begin": {
            "on": "valueQuote",
            "by": {"regex": "\\\\."}
        }
    },
    
    "comment": {
        "begin": [{
            "by": "/*",
            "everywhere": true,
            "set": {
                "previous-state": ""
            }
        },{
            "by": "/*",
            "on": "selector",
            "set": {
                "previous-state": "selector"
            }
        },{
            "by": "/*",
            "on": "property",
            "set": {
                "previous-state": "property"
            }
        }]
    }, 
    "commentEnd": {
        "begin": [{
            "by": "*/",
            "on": "comment"
        }]
    }
}