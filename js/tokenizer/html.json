{
	"default":{
		"begin": [{
			"on": ["htmlCommentEnd", "specialCharEnd", "closingTagEnd"],
			"by": ""
		},{
			"on": ["tagEnd"],
			"by": "",
			"when": {
				"css": false
			}
		},{
			"on": ["specialCharStart","specialCharContent"],
			"by": [" "],
			"data": {
				"error": true
			}
		}],
		"default": true,
		"init": {
			"html": true,
			"css": false,
			"js": false,
			"quoteType": null,
			"attrName": null
		}
	},
	"cssStyle": {
		"begin": {
			"on": "tagEnd",
			"by": "",
			"when": {
				"css": true
			}
		}
	},
	"tagStart": {
		"begin": [{
			"on": "default",
			"by": "<"
		},{
			"on": ["specialCharStart","specialCharContent"],
			"by": ["<"],
			"data": {
				"error": true
			}
		}],
		"data": {
			"color": "maroon"
		}
	},
	"tagName": {
		"begin": {
			"on": "tagStart"
		},
		"data": {
			"color": "blue"
		},
		"after": [{
			"by": "style",
			"set": {
				"css": true
			}
		}]
	},
		"tagAttrSpace": {
			"begin": [{
				"on": "quotedAttrValueEnd"
			},{
				"on": ["tagName", "tagAttrName"],
				"by": [" ", "\n"]
			},{
				"on": ["tagAttrValue","styleAttrPropertyName","styleAttrPropertyValue"],
				"by": [" ", "\n"],
				"when": {
					"quoteType": null
				}
			}]
		},
		"tagAttrName": {
			"begin": {
				"on": "tagAttrSpace" 
			},
			"data": {
				"color": "darkblue"
			},
			"after": {
				"set": {
					"attrName": "@tokenContent"
				}
			}
		},
		"tagAttrEqSign": {
			"begin": {
				"on": "tagAttrName",
				"by": "="
			},
			"data": {
				"color": "goldenrod"
			}
		},
		"tagAttrValue": {
			"begin": [{
				"on": ["tagAttrEqSign","quotedAttrValueStart", "specialChar"]
			}]
		},
		"styleAttrPropertyName": {
			"begin": [{
				"importance": 1,
				"on": ["quotedAttrValueStart", "specialChar"],
				"when": {
					"attrName": "style"
				}
			},{
				"on": ["styleAttrPropertyEnd"]
			}]
		},
		"styleAttrPropertySeparator": {
			"begin": [{
				"on": ["styleAttrPropertyName"],
				"by": ":"
			}]
		},
		"styleAttrPropertyValue": {
			"begin": [{
				"on": ["styleAttrPropertySeparator"]
			}]
		},
		"styleAttrPropertyEnd": {
			"begin": [{
				"on": ["styleAttrPropertyValue"],
				"by": ";"
			}]
		},
		"quotedAttrValueStart": {
			"begin": [{
				"on": ["tagAttrEqSign"],
				"by": ["\""],
				"set": {
					"quoteType": "\""
				}
			},{
				"on": ["tagAttrEqSign"],
				"by": ["'"],
				"set": {
					"quoteType": "'"
				}
			}]
		},
		"quotedAttrValueEnd": {
			"begin": [{
				"on": ["tagAttrValue","styleAttrPropertyName","styleAttrPropertyValue"],
				"by": ["\""],
				"when": {
					"quoteType": "\""
				}
			},{
				"on": ["tagAttrValue","styleAttrPropertyName","styleAttrPropertyValue"],
				"by": ["'"],
				"when": {
					"quoteType": "'"
				}
			}],
			"set": {
				"quoteType": null
			}
		},
		"specialChar": {
			"begin": {
				"on": "tagAttrValue",
				"by": ["\\a","\\c","\\d","\\e","\\f","\\g","\\h","\\i","\\j","\\k","\\l","\\m","\\n","\\o","\\p","\\r","\\s","\\t","\\u","\\w","\\v","\\q","\\x","\\y","\\z","\\'","\\\"","\\\\","\\@","\\#","\\;","\\*","\\&","\\^","\\%"]
			},
			"data": {
				"color": "pink"
			}
		},

	"tagEnd": {
		"begin": [{
			"on": ["tagStart", "tagName", "tagAttrSpace", "tagAttrName", "tagAttrValue"],
			"by": ["/>",">"]
		},{
			"on": ["tagAttrEqSign"],
			"by": ["/>",">"],
			"data": {
				"error": true
			}
		}],
		"data": {
			"color": "maroon"
		}
	},
	"closingTagStart": {
		"begin": [{
			"on": ["default", "cssStyle"],
			"by": "</"
		},{
			"on": ["specialCharStart","specialCharContent"],
			"by": ["</"],
			"data": {
				"error": true
			}
		}],
		"set": {
			"css": false,
			"js": false
		},
		"data": {
			"color": "maroon"
		}
	},
		"closingTagName": {
			"begin": {
				"on": "closingTagStart"
			},
			"data": {
				"color": "blue"
			}
		},
		"closingTagEnd": {
			"begin": {
				"on": "closingTagName",
				"by": ">"
			},
			"data": {
				"color": "maroon"
			}
		},
	"htmlCommentStart": {
		"begin": {
			"on": "default",
			"by": "<!--"
		},
		"data": {
			"color": "green"
		}
	},
		"htmlCommentContent": {
			"begin": {
				"on": "htmlCommentStart",
				"by": ""
			},
			"data": {
				"color": "green"
			}
		},
		"htmlCommentEnd": {
			"begin": {
				"on": "htmlCommentContent",
				"by": "-->"
			},
			"data": {
				"color": "green"
			}
		},
	"specialCharStart": {
			"begin": {
				"on": "default",
				"by": "&"
			},
			"data": {
				"color": "violet"
			}
		},
		"specialCharContent": {
			"begin": {
				"on": "specialCharStart",
				"by": ""
			},
			"data": {
				"color": "violet"
			}
		},
		"specialCharEnd": {
			"begin": [{
				"on": "specialCharContent",
				"by": ";"
			}],
			"data": {
				"color": "violet"
			}
		}
}